<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color1</item>
        <item name="colorPrimaryDark">@color/color1</item>
        <item name="colorAccent">@color/color2</item>
    </style>

    <style name="titlestyle">
        <item name="android:background">@color/color1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="borderselector">
        <item name="android:background">@drawable/border_selector</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">20dp</item>

    </style>

    <style name="btnselector">
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
